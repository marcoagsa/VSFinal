<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcosa.myapplication.jogo"
    android:background="@android:color/white">


    <TableRow
        android:id="@+id/Row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="5dp">


        <ProgressBar
            android:id="@+id/bar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressTint="#f90d09" />

        <ProgressBar
            android:id="@+id/bar2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressTint="#f90d09"
            android:mirrorForRtl="true" />

    </TableRow>

    <TableRow
        android:id="@+id/linha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Row1"
        android:gravity="start">

    <ImageView
        android:id="@+id/JP1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/zero_a"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/JP2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/zero_v"
        android:layout_margin="10dp"/>
</TableRow>

    <TableRow
        android:id="@+id/Row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo1"
        android:layout_below="@+id/linha2">

        <ImageView
            android:id="@+id/Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ken"
            android:scaleType="fitStart" />

        <ImageView
            android:id="@+id/TotalMoedas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/zero_r"/>



        <ImageView
            android:id="@+id/Player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/kazuya"
            android:scaleType="fitEnd"/>

    </TableRow>


    <TableRow
        android:id="@+id/Row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Row2"
        android:padding="5dp">

        <TextView
            android:id="@+id/Coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark" />

    </TableRow>


    <TableRow
        android:id="@+id/Row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Row3"
        android:weightSum="1"
        android:padding="5dp">


        <SeekBar
            android:id="@+id/Sk1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0.99"
            android:progressBackgroundTint="@android:color/holo_red_light"
            android:progressTint="@android:color/holo_red_dark" />

    </TableRow>


    <TableRow
        android:id="@+id/Row5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Row4"
        android:padding="5dp">

        <TextView
            android:id="@+id/Bet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bet"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark" />

    </TableRow>



    <TableRow
        android:id="@+id/Row6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Row5"
        android:padding="5dp">


        <SeekBar
            android:id="@+id/Sk2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0.99"
            android:progressBackgroundTint="@android:color/holo_red_light"
            android:progressTint="@android:color/holo_red_dark" />


    </TableRow>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butao"
        android:src="@drawable/btn_click"
        android:background="@drawable/arcade_red_on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/vs"
        android:src="@drawable/resize"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linha2">
    </ImageView>

    <TableRow
        android:id="@+id/linha3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_below="@+id/Row1"
        android:layout_alignParentEnd="true">

    <ImageView
        android:id="@+id/JP11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/zero_a"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/JP22"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/zero_v"
        android:layout_margin="10dp" />


</TableRow>

    <TextView
        android:text="Fight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/butao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/Fight"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:typeface="monospace"
        android:textStyle="normal|bold" />


</RelativeLayout>
